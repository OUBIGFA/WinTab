<Window x:Class="WinTab.TabHost.TabOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WinTab.UI.Converters;assembly=WinTab.UI"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True"
        Title="WinTab Overlay">

    <Window.Resources>
        <converters:IconBytesToImageSourceConverter x:Key="IconToImageConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Tab item highlight brush for selected state -->
        <SolidColorBrush x:Key="TabSelectedBackground" Color="#40FFFFFF" />
        <SolidColorBrush x:Key="TabHoverBackground" Color="#20FFFFFF" />
        <SolidColorBrush x:Key="TabDefaultBackground" Color="Transparent" />
        <SolidColorBrush x:Key="TabBarBackground" Color="#D9202020" />
        <SolidColorBrush x:Key="TabForeground" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="CloseButtonHoverBackground" Color="#40FF4444" />
        <SolidColorBrush x:Key="AddButtonHoverBackground" Color="#30FFFFFF" />
    </Window.Resources>

    <Border x:Name="TabBarBorder"
            CornerRadius="6"
            Background="{StaticResource TabBarBackground}"
            Height="{Binding TabBarHeight}"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Padding="4,0"
            ClipToBounds="True">

        <DockPanel LastChildFill="True">

            <!-- Add Tab "+" button docked to the right -->
            <Button x:Name="AddTabButton"
                    DockPanel.Dock="Right"
                    Content="+"
                    Width="28"
                    Height="24"
                    Margin="2,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource TabForeground}"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="{DynamicResource String_AddTab}"
                    Click="AddTabButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="AddBtnBorder"
                                            Background="Transparent"
                                            CornerRadius="4"
                                            Padding="4,0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="AddBtnBorder" Property="Background"
                                                    Value="{StaticResource AddButtonHoverBackground}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Tab Items (horizontal list) -->
            <ItemsControl x:Name="TabItemsControl"
                          ItemsSource="{Binding Tabs}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="TabBorder"
                                CornerRadius="4"
                                Margin="1,3"
                                Padding="6,0"
                                Cursor="Hand"
                                Background="{StaticResource TabDefaultBackground}"
                                MinWidth="80"
                                MaxWidth="200"
                                MouseLeftButtonDown="TabItem_MouseLeftButtonDown"
                                MouseDown="TabItem_MouseDown">

                            <DockPanel VerticalAlignment="Center">

                                <!-- Close button "x" docked to the right -->
                                <Button x:Name="CloseTabButton"
                                        DockPanel.Dock="Right"
                                        Content="&#xD7;"
                                        Width="18"
                                        Height="18"
                                        Margin="4,0,0,0"
                                        FontSize="12"
                                        Foreground="{StaticResource TabForeground}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        ToolTip="{DynamicResource String_CloseTab}"
                                        Tag="{Binding Handle}"
                                        Click="CloseTabButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="CloseBtnBorder"
                                                                Background="Transparent"
                                                                CornerRadius="3"
                                                                Width="18"
                                                                Height="18">
                                                            <TextBlock Text="&#xD7;"
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource TabForeground}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="CloseBtnBorder" Property="Background"
                                                                        Value="{StaticResource CloseButtonHoverBackground}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Icon -->
                                <Image Width="16"
                                       Height="16"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Source="{Binding IconData, Converter={StaticResource IconToImageConverter}}"
                                       RenderOptions.BitmapScalingMode="HighQuality" />

                                <!-- Title -->
                                <TextBlock Text="{Binding Title}"
                                           Foreground="{StaticResource TabForeground}"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap" />
                            </DockPanel>
                        </Border>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter TargetName="TabBorder" Property="Background"
                                        Value="{StaticResource TabSelectedBackground}" />
                            </DataTrigger>
                            <Trigger SourceName="TabBorder" Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background"
                                        Value="{StaticResource TabHoverBackground}" />
                            </Trigger>
                            <!-- Selected takes priority over hover -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsActive}" Value="True" />
                                    <Condition Binding="{Binding IsMouseOver, ElementName=TabBorder}" Value="True" />
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="TabBorder" Property="Background"
                                        Value="{StaticResource TabSelectedBackground}" />
                            </MultiDataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </DockPanel>
    </Border>
</Window>
