    <system:String x:Key="Language_English">English</system:String>
    <system:String x:Key="Language_Chinese">简体中文</system:String>
    <system:String x:Key="Button_SwitchLanguage">切换语言 / Switch Language</system:String>
    <system:String x:Key="GroupAlreadyOpenMessage">Group "{0}" is already open. Close it before renaming.</system:String>

</ResourceDictionary>
