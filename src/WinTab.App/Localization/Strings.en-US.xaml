                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Window Titles -->
    <system:String x:Key="WindowTitle_Settings">WinTab Settings</system:String>
    <system:String x:Key="WindowTitle_Host">WinTab Host</system:String>
    
    <!-- Main Header -->
    <system:String x:Key="MainHeader_Title">WinTab</system:String>
    <system:String x:Key="MainHeader_Subtitle">Early preview settings for the new WinTab experience.</system:String>
    
    <!-- Group Headers -->
    <system:String x:Key="GroupHeader_Startup">Startup</system:String>
    <system:String x:Key="GroupHeader_TrayIcon">Tray Icon</system:String>
    <system:String x:Key="GroupHeader_AutoGrouping">Auto Grouping</system:String>
    <system:String x:Key="GroupHeader_Groups">Groups</system:String>
    <system:String x:Key="GroupHeader_WindowInspector">Window Inspector</system:String>
    <system:String x:Key="GroupHeader_Diagnostics">Diagnostics</system:String>
    
    <!-- Startup Options -->
    <system:String x:Key="Option_RunAtStartup">Run at Windows startup</system:String>
    <system:String x:Key="Option_StartMinimized">Start minimized to tray</system:String>
    
    <!-- Tray Icon Options -->
    <system:String x:Key="Option_ShowTrayIcon">Show tray icon</system:String>
    
