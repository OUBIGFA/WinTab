<Page x:Class="WinTab.App.Views.Pages.AppearancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:AppearanceViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AppearancePage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Margin="0,0,24,24" MaxWidth="800">

            <!-- Theme Section -->
            <TextBlock Text="{DynamicResource Appearance_Theme}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,0,0,12" />

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_Theme}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="{DynamicResource Appearance_ThemeSystem}"
                                 IsChecked="{Binding IsThemeSystem, Mode=TwoWay}"
                                 GroupName="Theme" />
                    <RadioButton Content="{DynamicResource Appearance_ThemeLight}"
                                 IsChecked="{Binding IsThemeLight, Mode=TwoWay}"
                                 GroupName="Theme" />
                    <RadioButton Content="{DynamicResource Appearance_ThemeDark}"
                                 IsChecked="{Binding IsThemeDark, Mode=TwoWay}"
                                 GroupName="Theme" />
                </StackPanel>
            </ui:CardControl>

            <!-- Tab Style Section -->
            <TextBlock Text="{DynamicResource Appearance_TabStyle}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,24,0,12" />

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_TabStyle}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="{DynamicResource Appearance_TabStyleModern}"
                                 IsChecked="{Binding IsTabStyleModern, Mode=TwoWay}"
                                 GroupName="TabStyle" />
                    <RadioButton Content="{DynamicResource Appearance_TabStyleTraditional}"
                                 IsChecked="{Binding IsTabStyleTraditional, Mode=TwoWay}"
                                 GroupName="TabStyle" />
                    <RadioButton Content="{DynamicResource Appearance_TabStyleCompact}"
                                 IsChecked="{Binding IsTabStyleCompact, Mode=TwoWay}"
                                 GroupName="TabStyle" />
                </StackPanel>
            </ui:CardControl>

            <!-- Tab Bar Section -->
            <TextBlock Text="Tab Bar"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,24,0,12" />

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_RoundedCorners}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding UseRoundedCorners, Mode=TwoWay}" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_MicaEffect}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding UseMicaEffect, Mode=TwoWay}" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_TabBarHeight}" FontWeight="Medium" />
                        <TextBlock Text="{Binding TabBarHeight, StringFormat={}{0} px}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="12" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider Minimum="24" Maximum="48"
                        Value="{Binding TabBarHeight, Mode=TwoWay}"
                        IsSnapToTickEnabled="True" TickFrequency="2"
                        Width="200" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Appearance_TabBarOpacity}" FontWeight="Medium" />
                        <TextBlock Text="{Binding TabBarOpacity, StringFormat={}{0:P0}}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="12" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider Minimum="0.5" Maximum="1.0"
                        Value="{Binding TabBarOpacity, Mode=TwoWay}"
                        IsSnapToTickEnabled="True"
                        TickFrequency="0.05"
                        Width="200" />
            </ui:CardControl>

        </StackPanel>
    </ScrollViewer>
</Page>
