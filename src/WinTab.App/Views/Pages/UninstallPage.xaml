<Page x:Class="WinTab.App.Views.Pages.UninstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:UninstallViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UninstallPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" Margin="24,48,24,24">
                
                <ui:SymbolIcon Symbol="Delete24" FontSize="48" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,16"/>
                <TextBlock Text="{DynamicResource Uninstall_Title}"
                           FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"
                           Margin="0,0,0,32" />

                <ui:CardControl Margin="0,0,0,16">
                    <StackPanel>
                        <!-- Environment Info -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="{DynamicResource Uninstall_ModeLabel}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Grid.Row="0" Grid.Column="0" Margin="0,0,12,8"/>
                            <TextBlock Text="{Binding ModeText}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" FontWeight="Medium"/>
                            
                            <!-- Uninstaller path row: installed mode only -->
                            <TextBlock Text="{DynamicResource Uninstall_PathLabel}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0"
                                       Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding UninstallerPathText}" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>

                        <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" Margin="0,0,0,16"/>

                        <!-- Installed mode: Remove user data option -->
                        <StackPanel Margin="0,0,0,24"
                                    Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox Content="{DynamicResource Uninstall_RemoveUserData}"
                                      IsChecked="{Binding RemoveUserDataOnUninstall, Mode=TwoWay}"
                                      IsEnabled="{Binding IsRemoveUserDataOptionEnabled}" />
                            <TextBlock Text="{DynamicResource Uninstall_RemoveUserData_Desc}"
                                       Margin="28,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" FontSize="12" />
                        </StackPanel>

                        <!-- Portable mode: system config restore hint -->
                        <TextBlock Text="{DynamicResource Uninstall_RestoreSystemConfig_Desc}"
                                   Margin="0,0,0,24"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap" FontSize="12"
                                   Visibility="{Binding IsPortable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Actions: installed mode -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                    Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ui:Button Content="{DynamicResource Uninstall_Button}"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Appearance="Danger"
                                       Command="{Binding StartUninstallCommand}" />
                            <ui:Button Content="{DynamicResource Uninstall_OpenSystem}"
                                       Icon="{ui:SymbolIcon WindowWrench24}"
                                       Command="{Binding OpenSystemUninstallCommand}"
                                       Margin="8,0,0,0" />
                            <ui:Button Content="{DynamicResource Uninstall_OpenFolder}"
                                       Icon="{ui:SymbolIcon Folder24}"
                                       Command="{Binding OpenAppDirectoryCommand}"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <!-- Actions: portable mode -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                    Visibility="{Binding IsPortable, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ui:Button Content="{DynamicResource Uninstall_RestoreSystemConfig}"
                                       Icon="{ui:SymbolIcon ArrowCounterclockwise24}"
                                       Appearance="Caution"
                                       Command="{Binding RestoreSystemConfigCommand}" />
                            <ui:Button Content="{DynamicResource Uninstall_OpenFolder}"
                                       Icon="{ui:SymbolIcon Folder24}"
                                       Command="{Binding OpenAppDirectoryCommand}"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </ui:CardControl>

                <!-- Bottom hint: installed mode -->
                <TextBlock Text="{DynamicResource Uninstall_DefaultBehavior}"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           FontSize="12" TextWrapping="Wrap" MaxWidth="500"
                           Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Bottom hint: portable mode -->
                <TextBlock Text="{DynamicResource Uninstall_PortableHint}"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           FontSize="12" TextWrapping="Wrap" MaxWidth="500"
                           Visibility="{Binding IsPortable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
