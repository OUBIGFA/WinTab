<Page x:Class="WinTab.App.Views.Pages.UninstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:UninstallViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UninstallPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Margin="0,0,24,24" MaxWidth="800">

            <TextBlock Text="{DynamicResource Uninstall_Title}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,0,0,16" />

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <TextBlock Text="{DynamicResource Uninstall_Description}"
                               TextWrapping="Wrap"
                               MaxWidth="620" />
                </ui:CardControl.Header>

                <StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="{DynamicResource Uninstall_ModeLabel}" />
                            <Run Text=": " />
                            <Run Text="{Binding ModeText}" />
                        </TextBlock>

                        <TextBlock Margin="0,8,0,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="{DynamicResource Uninstall_PathLabel}" />
                            <Run Text=": " />
                            <Run Text="{Binding UninstallerPathText}" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource Uninstall_Button}"
                                   Icon="{ui:SymbolIcon Delete24}"
                                   Command="{Binding StartUninstallCommand}" />
                        <ui:Button Content="{DynamicResource Uninstall_OpenSystem}"
                                   Icon="{ui:SymbolIcon WindowWrench24}"
                                   Command="{Binding OpenSystemUninstallCommand}"
                                   Margin="8,0,0,0" />
                        <ui:Button Content="{DynamicResource Uninstall_OpenFolder}"
                                   Icon="{ui:SymbolIcon Folder24}"
                                   Command="{Binding OpenAppDirectoryCommand}"
                                   Margin="8,0,0,0" />
                    </StackPanel>

                    <StackPanel Margin="0,12,0,0">
                        <CheckBox Content="{DynamicResource Uninstall_RemoveUserData}"
                                  IsChecked="{Binding RemoveUserDataOnUninstall, Mode=TwoWay}"
                                  IsEnabled="{Binding IsRemoveUserDataOptionEnabled}" />
                        <TextBlock Text="{DynamicResource Uninstall_RemoveUserData_Desc}"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </ui:CardControl>

            <TextBlock Text="{DynamicResource Uninstall_DefaultBehavior}"
                       Margin="0,12,0,0"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       TextWrapping="Wrap" />

        </StackPanel>
    </ScrollViewer>
</Page>
