<Page x:Class="WinTab.App.Views.Pages.BehaviorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:BehaviorViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="BehaviorPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Margin="0,0,24,24" MaxWidth="800">

            <TextBlock Text="{DynamicResource Behavior_Status}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,0,0,12" />

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Behavior_EnableExplorerOpenVerbInterception}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding EnableExplorerOpenVerbInterception, Mode=TwoWay}" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Behavior_OpenChildFolderInNewTab}" FontWeight="Medium" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding OpenChildFolderInNewTabFromActiveTab, Mode=TwoWay}"
                                 IsEnabled="{Binding IsOpenChildFolderInNewTabOptionEnabled}" />
            </ui:CardControl>

        </StackPanel>
    </ScrollViewer>
</Page>
