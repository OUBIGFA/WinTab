<Page x:Class="WinTab.App.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:AboutViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AboutPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel MaxWidth="800">
                
                <!-- App Identity & Description (Centered) -->
                <StackPanel HorizontalAlignment="Center" Margin="0,16,0,48">
                    <Image Source="/Assets/wintab.ico"
                           Width="96" Height="96"
                           RenderOptions.BitmapScalingMode="HighQuality" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{DynamicResource App_Name}"
                               FontSize="48" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,16"/>
                               
                    <TextBlock Text="{DynamicResource About_Description}"
                               TextWrapping="Wrap" TextAlignment="Center"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="14" MaxWidth="500" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Log File Location (Unchanged) -->
                <TextBlock Text="{DynamicResource About_LogLocation}"
                           FontSize="20" FontWeight="SemiBold"
                           Margin="0,0,0,16" />

                <ui:CardControl>
                    <ui:CardControl.Header>
                        <TextBlock Text="{Binding LogPath}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="500"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </ui:CardControl.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource About_OpenLog}"
                                   Icon="{ui:SymbolIcon Document24}"
                                   Command="{Binding OpenLogCommand}" />
                        <ui:Button Content="{DynamicResource About_OpenLogFolder}"
                                   Icon="{ui:SymbolIcon Folder24}"
                                   Command="{Binding OpenLogFolderCommand}"
                                   Margin="8,0,0,0" />
                    </StackPanel>
                </ui:CardControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer: Version and License (At the very bottom, centered) -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12">
                    <Run Text="{DynamicResource About_Version}" />
                    <Run Text=" " />
                    <Run Text="{Binding Version, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            <TextBlock Text="{DynamicResource About_License}"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0" />
        </StackPanel>
    </Grid>
</Page>
