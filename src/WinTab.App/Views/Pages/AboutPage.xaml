<Page x:Class="WinTab.App.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:AboutViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AboutPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Margin="0,0,24,24" MaxWidth="800"
                    HorizontalAlignment="Left">

            <StackPanel HorizontalAlignment="Center" MaxWidth="600">
                <!-- App Identity -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                    <Image Source="/Assets/wintab.ico"
                           Width="64" Height="64"
                           RenderOptions.BitmapScalingMode="HighQuality" />
                    <StackPanel VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="{DynamicResource App_Name}"
                                   FontSize="28" FontWeight="Bold"
                                   TextAlignment="Center" />
                        <TextBlock FontSize="14"
                                   TextAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="{DynamicResource About_Version}" />
                            <Run Text=" " />
                            <Run Text="{Binding Version, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Description -->
                <ui:CardControl Margin="0,0,0,8" HorizontalAlignment="Center" Width="600">
                    <ui:CardControl.Header>
                        <TextBlock Text="{DynamicResource About_Description}"
                                   TextWrapping="Wrap"
                                   MaxWidth="560"
                                   TextAlignment="Center" />
                    </ui:CardControl.Header>
                </ui:CardControl>

                <!-- License -->
                <ui:CardControl Margin="0,0,0,8" HorizontalAlignment="Center" Width="600">
                    <ui:CardControl.Header>
                        <TextBlock Text="{DynamicResource About_License}"
                                   FontWeight="Medium"
                                   TextAlignment="Center" />
                    </ui:CardControl.Header>
                </ui:CardControl>
            </StackPanel>

            <!-- Log File Location -->
            <TextBlock Text="{DynamicResource About_LogLocation}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,32,0,16" />

            <ui:CardControl Margin="0,0,0,8">
                <ui:CardControl.Header>
                    <TextBlock Text="{Binding LogPath}"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="500"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:Button Content="{DynamicResource About_OpenLog}"
                               Icon="{ui:SymbolIcon Document24}"
                               Command="{Binding OpenLogCommand}" />
                    <ui:Button Content="{DynamicResource About_OpenLogFolder}"
                               Icon="{ui:SymbolIcon Folder24}"
                               Command="{Binding OpenLogFolderCommand}"
                               Margin="8,0,0,0" />
                </StackPanel>
            </ui:CardControl>

        </StackPanel>
    </ScrollViewer>
</Page>
