<Page x:Class="WinTab.App.Views.Pages.ShortcutsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:WinTab.App.ViewModels"
      d:DataContext="{d:DesignInstance vm:ShortcutsViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ShortcutsPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Margin="0,0,24,24" MaxWidth="900">

            <!-- Header -->
            <TextBlock Text="{DynamicResource Shortcuts_Title}"
                       FontSize="20" FontWeight="SemiBold"
                       Margin="0,0,0,4" />
            <TextBlock Text="{DynamicResource Shortcuts_Description}"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="0,0,0,16" />

            <!-- Shortcuts List -->
            <ItemsControl ItemsSource="{Binding HotKeys}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,4">
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <CheckBox IsChecked="{Binding Enabled, Mode=TwoWay}"
                                              VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding ActionDisplayName}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <ui:Button Content="{Binding BindingDisplay}"
                                       MinWidth="160"
                                       Command="{Binding DataContext.StartRecordingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                       CommandParameter="{Binding}" />
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Recording indicator -->
            <TextBlock Text="{DynamicResource Shortcuts_ClickToRecord}"
                       Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Foreground="{DynamicResource SystemFillColorCautionBrush}"
                       FontWeight="Medium"
                       Margin="0,12,0,0" />

        </StackPanel>
    </ScrollViewer>
</Page>
