    <system:String x:Key="TabBar_CloseOtherTabs">Close Other Tabs</system:String>
    <system:String x:Key="TabBar_RenameTab">Rename Tab</system:String>
    <system:String x:Key="TabBar_SetAccentColor">Set Accent Color</system:String>

    <!-- Tray Icon -->
    <system:String x:Key="Tray_Open">Open WinTab</system:String>
    <system:String x:Key="Tray_Settings">Settings</system:String>
    <system:String x:Key="Tray_EnableGrouping">Enable Grouping</system:String>
    <system:String x:Key="Tray_DisableGrouping">Disable Grouping</system:String>
    <system:String x:Key="Tray_Exit">Exit</system:String>
    <system:String x:Key="Tray_Tooltip">WinTab - Window Tab Manager</system:String>
    <system:String x:Key="Tray_GroupCount">Active groups: {0}</system:String>

    <!-- Common -->
    <system:String x:Key="Common_Save">Save</system:String>
    <system:String x:Key="Common_Cancel">Cancel</system:String>
    <system:String x:Key="Common_Close">Close</system:String>
    <system:String x:Key="Common_Apply">Apply</system:String>
    <system:String x:Key="Common_OK">OK</system:String>
    <system:String x:Key="Common_Yes">Yes</system:String>
    <system:String x:Key="Common_No">No</system:String>
    <system:String x:Key="Common_Enabled">Enabled</system:String>
    <system:String x:Key="Common_Disabled">Disabled</system:String>

    <!-- Session Recovery -->
    <system:String x:Key="Session_RecoveryTitle">Session Recovery</system:String>
    <system:String x:Key="Session_RecoveryMessage">WinTab detected that the previous session was not closed properly. Would you like to restore your window groups?</system:String>

    <!-- Drag to Group -->
    <system:String x:Key="Drag_EnableDragToGroup">Enable drag-to-group</system:String>
    <system:String x:Key="Drag_DragDelay">Drag delay</system:String>
    <system:String x:Key="Drag_EnableMiddleClick">Middle-click to close tab</system:String>
    <system:String x:Key="Drag_EnableScrollWheel">Scroll wheel to switch tabs</system:String>

</ResourceDictionary>
