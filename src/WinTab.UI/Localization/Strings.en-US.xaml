    <system:String x:Key="Shortcuts_MoveRight">Move Tab Right</system:String>
    <system:String x:Key="Shortcuts_ToggleGrouping">Toggle Grouping</system:String>
    <system:String x:Key="Shortcuts_ClickToRecord">Click here to record shortcut...</system:String>

    <!-- Groups Page -->
    <system:String x:Key="Groups_Title">Group Management</system:String>
    <system:String x:Key="Groups_Description">View and manage active window groups.</system:String>
    <system:String x:Key="Groups_Name">Group Name</system:String>
    <system:String x:Key="Groups_TabCount">Tab Count</system:String>
    <system:String x:Key="Groups_ActiveTab">Active Tab</system:String>
    <system:String x:Key="Groups_Disband">Disband Group</system:String>
    <system:String x:Key="Groups_DisbandAll">Disband All</system:String>
    <system:String x:Key="Groups_Refresh">Refresh</system:String>
    <system:String x:Key="Groups_NoGroups">No active groups.</system:String>

    <!-- About Page -->
    <system:String x:Key="About_Title">About WinTab</system:String>
    <system:String x:Key="About_Version">Version</system:String>
    <system:String x:Key="About_Description">WinTab is an open-source Windows window tab manager that lets you combine multiple application windows into a tabbed interface.</system:String>
    <system:String x:Key="About_License">License: MIT</system:String>
    <system:String x:Key="About_GitHub">GitHub</system:String>
    <system:String x:Key="About_LogLocation">Log file location</system:String>
