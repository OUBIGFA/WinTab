    <system:String x:Key="Appearance_TabBarHeight">Tab bar height</system:String>
    <system:String x:Key="Appearance_TabBarOpacity">Tab bar opacity</system:String>

    <!-- Auto Grouping Page -->
    <system:String x:Key="AutoGroup_Title">Auto Grouping Rules</system:String>
    <system:String x:Key="AutoGroup_Description">When a new window appears, automatically add it to a group based on rules.</system:String>
    <system:String x:Key="AutoGroup_AddRule">Add Rule</system:String>
    <system:String x:Key="AutoGroup_RemoveRule">Remove Rule</system:String>
    <system:String x:Key="AutoGroup_Enabled">Enabled</system:String>
    <system:String x:Key="AutoGroup_MatchType">Match Type</system:String>
    <system:String x:Key="AutoGroup_MatchValue">Match Value</system:String>
    <system:String x:Key="AutoGroup_GroupName">Group Name</system:String>
    <system:String x:Key="AutoGroup_Priority">Priority</system:String>
    <system:String x:Key="AutoGroup_MatchType_ProcessName">Process Name</system:String>
    <system:String x:Key="AutoGroup_MatchType_TitleContains">Title Contains</system:String>
    <system:String x:Key="AutoGroup_MatchType_TitleRegex">Title Regex</system:String>
    <system:String x:Key="AutoGroup_MatchType_ClassName">Window Class</system:String>
    <system:String x:Key="AutoGroup_MatchType_ProcessPath">Process Path</system:String>
    <system:String x:Key="AutoGroup_AutoApply">Auto-apply rules</system:String>
    <system:String x:Key="AutoGroup_Exclusions">Exclusion List</system:String>
    <system:String x:Key="AutoGroup_ExclusionsDesc">Windows from the following processes will not be auto-grouped.</system:String>
    <system:String x:Key="AutoGroup_AddExclusion">Add Exclusion</system:String>
    <system:String x:Key="AutoGroup_RemoveExclusion">Remove Exclusion</system:String>

    <!-- Shortcuts Page -->
    <system:String x:Key="Shortcuts_Title">Keyboard Shortcuts</system:String>
    <system:String x:Key="Shortcuts_Description">Customize global hotkeys for tab switching and management.</system:String>
    <system:String x:Key="Shortcuts_Action">Action</system:String>
    <system:String x:Key="Shortcuts_Binding">Shortcut</system:String>
    <system:String x:Key="Shortcuts_Enabled">Enabled</system:String>
    <system:String x:Key="Shortcuts_NextTab">Next Tab</system:String>
    <system:String x:Key="Shortcuts_PrevTab">Previous Tab</system:String>
    <system:String x:Key="Shortcuts_CloseTab">Close Tab</system:String>
