<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!-- Application -->
    <system:String x:Key="App_Name">WinTab</system:String>
    <system:String x:Key="App_Description">Open-source window tab manager</system:String>

    <!-- Navigation -->
    <system:String x:Key="Nav_General">General</system:String>
    <system:String x:Key="Nav_Appearance">Appearance</system:String>
    <system:String x:Key="Nav_AutoGrouping">Auto Grouping</system:String>
    <system:String x:Key="Nav_Shortcuts">Shortcuts</system:String>
    <system:String x:Key="Nav_Groups">Groups</system:String>
    <system:String x:Key="Nav_About">About</system:String>

    <!-- General Page -->
    <system:String x:Key="General_Startup">Startup</system:String>
    <system:String x:Key="General_RunAtStartup">Run at Windows startup</system:String>
    <system:String x:Key="General_StartMinimized">Start minimized to system tray</system:String>
    <system:String x:Key="General_TrayIcon">System Tray</system:String>
    <system:String x:Key="General_ShowTrayIcon">Show tray icon</system:String>
    <system:String x:Key="General_Language">Language</system:String>
    <system:String x:Key="General_LanguageLabel">Interface language</system:String>
    <system:String x:Key="General_Chinese">简体中文</system:String>
    <system:String x:Key="General_English">English</system:String>
    <system:String x:Key="General_Behavior">Behavior</system:String>
    <system:String x:Key="General_RestoreSession">Restore previous session on startup</system:String>
    <system:String x:Key="General_AutoCloseEmpty">Auto-close empty groups</system:String>
    <system:String x:Key="General_GroupSameProcess">Auto-group windows from same process</system:String>

    <system:String x:Key="General_ExplorerRepair">Explorer Repair</system:String>
    <system:String x:Key="General_RestoreExplorerDefaults">Restore Explorer folder open behavior</system:String>
    <system:String x:Key="General_RestoreExplorerDefaultsDesc">Use this if opening folders from Desktop/third-party apps behaves unexpectedly (Explorer will restart).</system:String>

    <!-- Appearance Page -->
    <system:String x:Key="Appearance_Theme">Theme</system:String>
    <system:String x:Key="Appearance_ThemeSystem">Follow system</system:String>
    <system:String x:Key="Appearance_ThemeLight">Light</system:String>
    <system:String x:Key="Appearance_ThemeDark">Dark</system:String>
    <system:String x:Key="Appearance_TabStyle">Tab Style</system:String>
    <system:String x:Key="Appearance_TabStyleModern">Modern</system:String>
