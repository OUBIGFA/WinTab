<Window x:Class="WinTab.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WinTab.UI.Views"
    xmlns:managers="clr-namespace:WinTab.Managers"
    Title="{DynamicResource App_Title}"
        Width="850" Height="600"
        MinWidth="700" MinHeight="175"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        TextBlock.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}">

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderBrush="{StaticResource BorderGradientBrush}"
            CornerRadius="5"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border x:Name="TitleBar" Grid.Row="0" Background="{StaticResource TitleBarBrush}" CornerRadius="4, 4, 0, 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Menu Button -->
                    <ToggleButton x:Name="DrawerButton" Grid.Column="0" Style="{StaticResource ToggleButtonIconStyle}" Margin="6,0,0,0"
                                  Content="&#x2630;" Focusable="False" ToolTip="{DynamicResource Menu_OpenAppMenu}" />

                    <!-- Window Title -->
                    <TextBlock Grid.Column="1" Text="{DynamicResource App_Title}" VerticalAlignment="Center" Margin="8,0"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               FontSize="14" />

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton" Style="{StaticResource IconButtonStyle}" Content="&#x2212;" Focusable="False" />
                        <Button x:Name="MaximizeButton" Focusable="False">
                            <Button.Style>
                                <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                                    <Setter Property="Content" Value="&#x2610;" />
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding WindowState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                            Value="Maximized">
                                            <Setter Property="Content" Value="&#x2750;" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton" Style="{StaticResource IconButtonStyle}" Content="&#x2715;" Focusable="False"
                                Margin="0,0,8,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <!-- Custom Drawer Implementation -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Menu Drawer -->
                    <Border Grid.Column="0"
                            Background="{StaticResource CardGradientBrush}"
                            BorderBrush="{StaticResource BorderGradientBrush}"
                            BorderThickness="0,0,1,0"
                            CornerRadius="0,0,0,4"
                            Width="0">
                        <DockPanel>
                            <ListBox x:Name="NavigationList" DockPanel.Dock="Top" SelectedIndex="0"
                                     Style="{StaticResource NavigationListBoxStyle}">
                                <ListBox.Resources>
                                    <Storyboard x:Key="CloseDrawerStoryboard">
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="DrawerButton"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </ListBox.Resources>
                                <ListBox.Triggers>
                                    <EventTrigger RoutedEvent="ListBox.MouseLeftButtonDown">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ListBox.PreviewMouseDoubleClick">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ListBox.KeyDown">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                </ListBox.Triggers>
                                <ListBoxItem ToolTip="{DynamicResource Nav_Shortcuts_Tooltip}">
                                    <TextBlock Text="&#x1F5F2;  {DynamicResource Nav_Shortcuts}" VerticalAlignment="Center" />
                                </ListBoxItem>
                                <ListBoxItem ToolTip="{DynamicResource Nav_Preferences_Tooltip}">
                                    <TextBlock Text="&#xE713;  {DynamicResource Nav_Preferences}" VerticalAlignment="Center" />
                                </ListBoxItem>
                                <ListBoxItem ToolTip="{DynamicResource Nav_About_Tooltip}">
                                    <TextBlock Text="&#xE939;  {DynamicResource Nav_About}" VerticalAlignment="Center" />
                                </ListBoxItem>
                            </ListBox>
                        </DockPanel>

                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3" Color="{StaticResource ShadowColor}" />
                        </Border.Effect>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=DrawerButton}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"
                                                                     BeginTime="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="165" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="0" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseIn" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- Main Content -->
                    <Grid Grid.Column="1">
                        <!-- Tab Control -->
                        <TabControl Style="{StaticResource CustomTabControlStyle}"
                                    SelectedIndex="{Binding SelectedIndex, ElementName=NavigationList}">
                            <TabControl.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2"
                                                  Color="{StaticResource ShadowColor}" />
                            </TabControl.Effect>
                            <!-- Shortcuts Tab -->
                            <TabItem Header="{DynamicResource Tab_Shortcuts}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Toolbar -->
                                    <DockPanel Grid.Row="0" Margin="16,8" LastChildFill="False">
                                        <!-- Action Buttons -->
                                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                <Button x:Name="BtnNewProfile" Content="{DynamicResource Profiles_New}" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="{DynamicResource Profiles_New_Tooltip}" />
                                                <Button x:Name="BtnImport" Content="{DynamicResource Profiles_Import}" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="{DynamicResource Profiles_Import_Tooltip}" />
                                                <Button x:Name="BtnExport" Content="{DynamicResource Profiles_Export}" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="{DynamicResource Profiles_Export_Tooltip}" />
                                                <Button x:Name="BtnSave" Content="{DynamicResource Profiles_Save}" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="{DynamicResource Profiles_Save_Tooltip}" />
                                        </StackPanel>

                                        <!-- Save on Exit Toggle -->
                                        <CheckBox DockPanel.Dock="Right" x:Name="CbAutoSaveProfiles"
                                                  Content="{DynamicResource Profiles_AutoSave}" Style="{StaticResource CustomCheckBoxStyle}"
                                                  ToolTip="{DynamicResource Profiles_AutoSave_Tooltip}" />
                                    </DockPanel>

                                    <!-- Profiles Panel -->
                                    <ScrollViewer Grid.Row="1" Margin="16,8,4,4"
                                                  VerticalScrollBarVisibility="Visible"
                                                  Style="{StaticResource CustomScrollViewerStyle}">
                                        <StackPanel x:Name="ProfilesPanel" />
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>

                            <!-- Preferences Tab -->
                            <TabItem Header="{DynamicResource Tab_Preferences}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource CustomScrollViewerStyle}">
                                    <StackPanel Margin="16, 8">
                                        <GroupBox Header="{DynamicResource Preferences_AppSettings}"
                                                  Style="{StaticResource CustomGroupBoxStyle}">
                                            <StackPanel Margin="8">
                                                <CheckBox x:Name="CbAutoUpdate" Content="{DynamicResource Preferences_AutoUpdate}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_AutoUpdate_Tooltip}" />
                                                <CheckBox x:Name="CbThemeIssue" Content="{DynamicResource Preferences_ThemeIssue}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_ThemeIssue_Tooltip}" />
                                                <CheckBox x:Name="CbSaveClosedHistory" Content="{DynamicResource Preferences_SaveClosedHistory}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_SaveClosedHistory_Tooltip}" />
                                                <CheckBox x:Name="CbRestorePreviousWindows" Content="{DynamicResource Preferences_RestorePreviousWindows}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_RestorePreviousWindows_Tooltip}" />
                                                <CheckBox x:Name="CbHideTrayIcon" Content="{DynamicResource Preferences_HideTrayIcon}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_HideTrayIcon_Tooltip}" />
                                                <CheckBox x:Name="CbOpenCurrentTabOnNewTab" Content="{DynamicResource Preferences_OpenCurrentTabOnNewTab}"
                                                          Style="{StaticResource CustomCheckBoxStyle}"
                                                          ToolTip="{DynamicResource Preferences_OpenCurrentTabOnNewTab_Tooltip}" />
    
                                                <StackPanel Orientation="Horizontal" Margin="4,6,4,0" ToolTip="{DynamicResource Preferences_Language_Tooltip}">
                                                    <TextBlock Text="{DynamicResource Preferences_Language}"
                                                               VerticalAlignment="Center"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,0,8,0" />
                                                    <ComboBox x:Name="CbLanguage" Width="160" Style="{StaticResource CustomComboBoxStyle}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- About Tab -->
                            <TabItem Header="{DynamicResource Tab_About}">
                                <local:AboutView />
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource ControlBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0" CornerRadius="0,0,4,4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8,4">
                        <!-- Window Hook Status -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsWindowHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{DynamicResource Status_WindowHook}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Reuse Tabs Status -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.ReuseTabs)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{DynamicResource Status_ReuseTabs}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Keyboard Hook Status -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsKeyboardHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{DynamicResource Status_KeyboardHook}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Mouse Hook Status -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsMouseHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{DynamicResource Status_MouseHook}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

